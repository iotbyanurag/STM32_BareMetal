#ifndef INC_ST7735_INTERFACES_H_
#define INC_ST7735_INTERFACES_H_


#include "stm32l4xx_hal.h"


#define CS_PIN 		GPIO_PIN_14 // PORTB
#define DC_PIN 		GPIO_PIN_13 // PORTB
#define DIN_PIN		GPIO_PIN_3  // PORTC
#define SCK_PIN 	GPIO_PIN_10 // PORTB
#define RESET_PIN 	GPIO_PIN_6  // PORTC

#define Set_BoardLed_HIGH() 	HAL_GPIO_WritePin(GPIOB, GPIO_PIN_14, GPIO_PIN_SET);
#define Set_BoardLed_LOW()		HAL_GPIO_WritePin(GPIOA, GPIO_PIN_5, GPIO_PIN_RESET);


#define Set_CS_PIN_HIGH() HAL_GPIO_WritePin(GPIOB, GPIO_PIN_14, GPIO_PIN_SET);
#define Set_CS_PIN_LOW() HAL_GPIO_WritePin(GPIOB, GPIO_PIN_14, GPIO_PIN_RESET);

#define Set_DC_PIN_HIGH() HAL_GPIO_WritePin(GPIOB, GPIO_PIN_14, GPIO_PIN_SET);
#define Set_DC_PIN_LOW() HAL_GPIO_WritePin(GPIOB, GPIO_PIN_14, GPIO_PIN_RESET);

#define Set_DIN_PIN_HIGH() HAL_GPIO_WritePin(GPIOB, GPIO_PIN_14, GPIO_PIN_SET);
#define Set_DIN_PIN_LOW() HAL_GPIO_WritePin(GPIOB, GPIO_PIN_14, GPIO_PIN_RESET);

#define Set_DIN_PIN_HIGH() HAL_GPIO_WritePin(GPIOB, GPIO_PIN_14, GPIO_PIN_SET);
#define Set_DIN_PIN_LOW() HAL_GPIO_WritePin(GPIOB, GPIO_PIN_14, GPIO_PIN_RESET);


#endif /* INC_ST7735_INTERFACES_H_ */
